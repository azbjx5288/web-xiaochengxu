.container{
  background-color: #f8f8f8;
}

.mainTitle{
  width: 100%;
  height: 40px;
  font-size: 18px;
  font-weight: 900;
  box-sizing: border-box;
  text-align: center;
  display: block;
  line-height: 40px;
  background-color: #fff;
}

.list{
  border-bottom: 1px solid #dadada;
  display: block;
  padding-bottom: 10px;
  padding-left: 12px;
  padding-right: 12px;
  margin-top: 1px;
  background-color: #fff;
}

.list .title{
 display: block;
 font-size: 14px;
 font-weight: 700;
 height: 40px;
 line-height: 40px;
}
.list .desc{
  color: #999;
  font-size: 14px;
  display: block;
  /* padding-top: 5px; */
  padding-bottom: 5px;
  text-indent: 2rem;
}

.company_image{
  margin: 5rpx;
  padding: 20rpx;
  align-content: center;
}

