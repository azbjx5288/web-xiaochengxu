<!--index.wxml-->

<view class="flex-wrp" style="display: flex;flex-direction:row;">
  <image src="../../images/logo.jpg" style="margin-left:25rpx;margin-top:28rpx;height: 100rpx;width:100rpx;"></image>
  <view style="flex-direction:column;">    
    <view class="company_title"><text>{{companyName1}}</text></view>
    <view class="company_title"><text>{{companyName2}}</text></view>
    <view class="jianjie_content"><text>{{jianjie}}</text></view>
    <view class="company_product1"><text>{{company_product1}}</text></view>
    <view class="company_product2"><text>{{company_product2}}</text></view>
  </view>
  
</view>

<view style="margin-left:45rpx;margin:10rpx;color :#8a8a8a;">-------------------------</view>

<view class="flex-wrp"  bindtap="Mapnavigation" style="display: flex;align-items: center;flex-direction:row;height:30px;margin-left:15px;padding:5px;">
  <image src="../../images/location.png" style="height: 20px;width:20px;"></image>
  <text type="default" style="font-size: 16px;margin-left:10px">{{address}}</text>
</view>


<view class="flex-wrp" style="display: flex;align-items: center;flex-direction:row;height:30px;margin-left:15px;padding:5px;">
  <image src="../../images/time.png" style="height: 20px;width:20px;;"></image>
  <text type="default" style="font-size: 16px;margin-left:10px" >{{time}}</text>
</view>

<view class="flex-wrp" bindtap="callmeTap" style="display: flex;align-items: center;flex-direction:row;height:30px;margin-left:15px;padding:5px;">
  <image src="../../images/phone.png" style="height: 20px;width:20px;"></image>
  <text type="default" style="font-size: 16px;margin-left:10px;" >{{phoneNumber}}</text>
</view>

<view class="flex-wrp" bindtap="callmephone" style="display: flex;align-items: center;flex-direction:row;height:30px;margin-left:15px;padding:5px;">
  <image src="../../images/telephone.png" style="height: 20px;width:20px;"></image>
  <text type="default" style="font-size: 16px;margin-left:10px;" >{{telphone}}</text>
</view>

<view class="flex-wrp" style="display: flex;align-items: center;flex-direction:row;height:30px;margin-left:15px;padding:5px;">
  <image src="../../images/picture.png" style="height: 20px;width:20px;"></image>
  <text type="default"  style="font-size: 16px;margin-left:10px;" >{{picture}}</text>
</view>

<view class = "company_image">

        <image src="../../images/01.jpg"class="userinfo-avatar"  bindtap="previewImg01" background-size="cover"mode="aspectFill"></image>
        <image src="../../images/02.jpg" class="userinfo-avatar" bindtap="previewImg02"  background-size="cover"mode="aspectFill"></image>
        <image src="../../images/03.jpg" class="userinfo-avatar"  bindtap="previewImg03"  background-size="cover"mode="aspectFill"></image>
        <image src="../../images/04.jpg" class="userinfo-avatar" bindtap="previewImg04"  background-size="cover"mode="aspectFill"></image>
        <image src="../../images/05.jpg" class="userinfo-avatar" bindtap="previewImg05"  background-size="cover"mode="aspectFill"></image>
</view>


